<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgCapaDetalhe"
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:contentDescription="Capa do livro"
        android:layout_marginEnd="16dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título do Livro"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAutorDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAnoDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvIDDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDescricaoDetalhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição do livro"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>
