<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaPerfilAutor_User">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/BarraNavegacaoPerfilAutor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/CorPadrao"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Perfil Autor"
        app:titleCentered="true"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/authorHeader"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/CorPadrao"
        app:layout_constraintTop_toBottomOf="@id/BarraNavegacaoPerfilAutor">

        <TextView
            android:id="@+id/avatarPerfilAutor"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/circulo_avatar"
            android:gravity="center"
            android:text="H"
            android:textColor="#9C8AC4"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/nomePerfilAutor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Howard Anton"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewLivrosAutor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/authorHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_book_horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>
