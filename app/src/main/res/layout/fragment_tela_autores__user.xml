<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".TelaAutores_User">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarAutores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2E1A77"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchViewAutores"
                    android:layout_width="311dp"
                    android:layout_height="34dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/searchview_bg"
                    android:focusable="true"
                    android:iconifiedByDefault="false"
                    android:imeOptions="actionSearch"
                    android:inputType="textNoSuggestions"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:queryHint="Pesquisar Autores"
                    app:queryBackground="@android:color/transparent"
                    app:queryHint="Pesquisar Autores" />
            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerAutores"
            android:layout_width="417dp"
            android:layout_height="832dp"
            android:clipToPadding="false"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarAutores"
            tools:listitem="@layout/item_autores_lista" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>